<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uploadfile</servlet-name>
        <servlet-class>servlets.uploadFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ready</servlet-name>
        <servlet-class>servlets.ready</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>battlefields</servlet-name>
        <servlet-class>servlets.battlefields</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>allies</servlet-name>
        <servlet-class>servlets.allies</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allies</servlet-name>
        <url-pattern>/allies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>missions</servlet-name>
        <servlet-class>servlets.missions</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>missions</servlet-name>
        <url-pattern>/missions</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>agents</servlet-name>
        <servlet-class>servlets.agents</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agents</servlet-name>
        <url-pattern>/agents</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>pickbattlefield</servlet-name>
        <servlet-class>servlets.pickbattlefield</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pickbattlefield</servlet-name>
        <url-pattern>/pickbattlefield</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>uploadfile</servlet-name>
        <url-pattern>/uploadfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ready</servlet-name>
        <url-pattern>/ready</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>battlefields</servlet-name>
        <url-pattern>/battlefields</url-pattern>
    </servlet-mapping>
</web-app>